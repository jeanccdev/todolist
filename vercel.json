{
    "version": 2,
    "builds": [
      { "src": "package.json", "use": "@vercel/static-build" },
      { "src": "data/db.json", "use": "@vercel/static" }
    ],
    "routes": [
      {
        "src": "/server",
        "dest": "data/db.json"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "env": {
      "SERVER_PORT": "5000"
    },
    "builds": [
      { "src": "package.json", "use": "vercel-build" }
    ],
    "functions": {
      "server": {
        "runtime": "vercel-node@3.x",
        "memory": 128,
        "maxDuration": 10
      }
    }
  }
  